<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Core" parent="@android:style/Theme.Material" />

    <style name="Theme.Material.BaseDialog" parent="Theme.Core">
        <item name="android:windowIsFloating">true</item>
        <item name="android:textAppearance">@color/theme_white</item>
    </style>

    <style name="Widget.Material.ListPopupWindow" parent="Theme.Core">
        <item name="android:popupBackground">#1a1a1a</item>
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="Widget.Material.Light.ListPopupWindow" parent="Theme.Core">
        <item name="android:popupBackground">#1a1a1a</item>
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="Widget.Material.Light.PopupWindow" parent="Widget.Material.ListPopupWindow" />

    <style name="Theme.Material.Light.DarkActionBar" parent="@android:style/Theme.Material">
        <item name="android:actionBarPopupTheme">@style/Widget.Material.ListPopupWindow</item>
    </style>

    <style name="Theme.Material.Light" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarPopupTheme">@style/Widget.Material.ListPopupWindow</item>
    </style>

</resources>
