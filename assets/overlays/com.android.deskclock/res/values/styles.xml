<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsTheme" parent="@android:style/Theme.Material.Settings">
        <item name="android:detailsElementBackground">@null</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@*common:style/Cyngn.AppBar</item>
        <item name="android:colorAccent">@*common:color/theme_primary</item>
        <item name="android:textColorPrimary">@*common:color/theme_white</item>
        <item name="android:textColorSecondary">@*common:color/theme_white_dark</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:colorAccent">@*common:color/theme_primary</item>
    </style>

    <style name="FabStyle">
        <item name="android:elevation">0dip</item>
    </style>

</resources>