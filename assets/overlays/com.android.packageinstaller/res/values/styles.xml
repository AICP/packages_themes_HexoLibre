<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Settings" parent="@android:style/Theme.Material">
        <item name="android:actionBarStyle">@style/Cyngn.AppBar</item>
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:statusBarColor">@*common:color/theme_statusbar</item>
        <item name="android:colorEdgeEffect">@*common:color/theme_edge</item>
        <item name="android:textColorPrimary">@*common:color/theme_white</item>
        <item name="android:textColorSecondary">@*common:color/theme_white_dark</item>
    </style>

    <style name="Cyngn.AppBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:contentInsetStart">72dp</item>
        <item name="android:background">@*common:color/theme_black</item>
    </style>

    <style name="GrantPermissions"
           parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar" />

    <style name="padded">
        <item name="android:paddingStart">16dip</item>
        <item name="android:paddingEnd">16dip</item>
    </style>

    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.DeviceDefault.Light.DialogWhenLarge.NoActionBar"/>

    <style name="Theme.AlertDialogActivity" parent="@android:style/Theme.DeviceDefault.Light.Panel">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.Header.Settings" parent="@android:style/Theme.DeviceDefault.Settings">
    </style>

</resources>