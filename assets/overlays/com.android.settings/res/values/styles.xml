<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SettingsBase" parent="@android:style/Theme.Material">
        <item name="android:actionBarStyle">@style/Theme.AppBar</item>
        <item name="android:statusBarColor">#FF000000</item>
    </style>

    <style name="Theme.Settings" parent="@style/Theme.SettingsBase" />

    <style name="Theme.AppBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@*common:color/theme_black</item>
    </style>

    <style name="Theme.SubSettings" parent="@style/Theme.SettingsBase" />

    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:actionBarStyle">@style/Theme.AppBar2</item>
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:background">@color/theme_dark</item>
        <item name="android:colorBackground">@color/theme_dark</item>
        <item name="android:colorBackgroundCacheHint">@color/theme_accent</item>
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>

    <style name="Theme.AppBar2" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:background">@*common:color/theme_black</item>
    </style>

    <style name="Theme.SubSettingsDialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:background">@color/theme_dark</item>
        <item name="android:actionBarTheme">@android:style/ThemeOverlay.Material.Dark.ActionBar</item>
    </style>

    <style name="wifi_item_label">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">8.0dip</item>
    </style>

    <style name="wifi_item_content">
       <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
       <item name="android:textColor">@color/theme_white</item>
       <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="settingSeparator">
        <item name="android:background">@color/theme_dark</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

</resources>
